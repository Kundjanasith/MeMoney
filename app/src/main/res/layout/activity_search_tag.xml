<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.exceed.projectsoft1.Activity.SearchTag"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/income_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorIncome"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/show_income_view"
        android:layout_width="180dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorIncome"
        android:layout_above="@+id/expense_view"
        android:layout_below="@id/income_view">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/show_expense_view"
        android:layout_width="180dp"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorExpense"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/expense_view"
        android:layout_below="@id/income_view">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/expense_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorExpense"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
