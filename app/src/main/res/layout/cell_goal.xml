<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ec4141"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorFriday"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#FFFFFF"
        android:id="@+id/edit_goal"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/delete_goal" />
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorFriday"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#FFFFFF"
        android:id="@+id/delete_goal"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Goal"
        android:gravity="center_vertical"
        android:layout_width="291dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/edit_goal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Name : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/goal_status" />
    <TextView
        android:id="@+id/goal_name"
        android:text="name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_goal"
        android:layout_toEndOf="@+id/textView16" />
    <TextView
        android:text="Price : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_below="@+id/goal_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView16" />
    <TextView
        android:id="@+id/goal_price"
        android:text="price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />
    <TextView
        android:text="Date : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/goal_price"
        android:layout_toStartOf="@+id/goal_price" />
    <TextView
        android:id="@+id/goal_date"
        android:text="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@+id/goal_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status : "
            android:id="@+id/textView19"
            android:layout_below="@+id/progressBar"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="status"
            android:id="@+id/goal_status"
            android:layout_below="@+id/progressBar"
            android:layout_toEndOf="@+id/textView19" />
    </RelativeLayout>

</android.support.v7.widget.CardView>